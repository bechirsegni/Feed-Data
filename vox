se=nil, @name=#<RSS::Atom::PersonConstruct::Name:0x00000003a97308 @parent=#<RSS::Atom::Feed::Author:0x00000003ab9228 ...>, @converter=nil, @do_validate=false, @lang=nil, @base=nil, @content="Todd VanDerWerff">, @uri=nil, @email=nil>], @category=[], @contributor=[], @link=[#<RSS::Atom::Feed::Link:0x00000003ad71b0 @parent=#<RSS::Atom::Feed::Entry:0x00000004cfb210 ...>, @converter=nil, @do_validate=false, @lang=nil, @base=nil, @href="http://www.vox.com/2016/8/21/12532188/the-night-of-recap-hbo-interview", @rel="alternate", @type="text/html", @hreflang=nil, @title=nil, @length=nil>], @dc_title=[], @dc_description=[], @dc_creator=[], @dc_subject=[], @dc_publisher=[], @dc_contributor=[], @dc_type=[], @dc_format=[], @dc_identifier=[], @dc_source=[], @dc_language=[], @dc_relation=[], @dc_coverage=[], @dc_rights=[], @dc_date=[]>, #<RSS::Atom::Feed::Entry:0x00000003a94130 @parent=#<RSS::Atom::Feed:0x00000003bbc2b0 @parent=nil, @converter=nil, @do_validate=false, @lang="en", @base=nil, @generator=nil, @icon=#<RSS::Atom::Feed::Icon:0x00000004a9bdd0 @parent=#<RSS::Atom::Feed:0x00000003bbc2b0 ...>, @converter=nil, @do_validate=false, @lang=nil, @base=nil, @content="https://cdn0.vox-cdn.com/community_logos/52517/voxv.png">, @id=#<RSS::Atom::Feed::Id:0x00000004aa7f40 @parent=#<RSS::Atom::Feed:0x00000003bbc2b0 ...>, @converter=nil, @do_validate=false, @lang=nil, @base=nil, @content="http://www.vox.com/rss/index.xml">, @logo=nil, @rights=nil, @subtitle=nil, @title=#<RSS::Atom::Feed::Title:0x00000003b32448 @parent=#<RSS::Atom::Feed:0x00000003bbc2b0 ...>, @converter=nil, @do_validate=false, @lang=nil, @base=nil, @type=nil, @xhtml=nil, @content="Vox -  All">, @updated=#<RSS::Atom::Feed::Updated:0x00000004a9a750 @parent=#<RSS::Atom::Feed:0x00000003bbc2b0 ...>, @converter=nil, @do_validate=false, @lang=nil, @base=nil, @content=2016-08-22 21:38:40 -0400>, @author=[], @category=[], @contributor=[], @link=[#<RSS::Atom::Feed::Link:0x00000004aa5d30 @parent=#<RSS::Atom::Feed:0x00000003bbc2b0 ...>, @converter=nil, @do_validate=false, @lang=nil, @base=nil, @href="http://www.vox.com/", @rel="alternate", @type="text/html", @hreflang=nil, @title=nil, @length=nil>], @entry=[...], @dc_title=[], @dc_description=[], @dc_creator=[], @dc_subject=[], @dc_publisher=[], @dc_contributor=[], @dc_type=[], @dc_format=[], @dc_identifier=[], @dc_source=[], @dc_language=[], @dc_relation=[], @dc_coverage=[], @dc_rights=[], @dc_date=[], @xml_stylesheets=[], @feed_type="atom", @feed_subtype="feed", @feed_version="1.0", @version="1.0", @encoding="UTF-8", @standalone=false, @output_encoding=nil>, @converter=nil, @do_validate=false, @lang=nil, @base=nil, @content=#<RSS::Atom::Feed::Entry::Content:0x00000003a7e8f8 @parent=#<RSS::Atom::Feed::Entry:0x00000003a94130 ...>, @converter=nil, @do_validate=false, @lang=nil, @base=nil, @type="html", @src=nil, @xml=nil, @content="  \n  <img alt=\"\" src=\"https://cdn2.vox-cdn.com/thumbor/vkMysJDJER0wb5NkRKnJrDWq-nY=/0x0:5472x3648/1310x873/cdn0.vox-cdn.com/uploads/chorus_image/image/50457829/585275994.0.jpg\" />\n\n\n\n  <p id=\"SzJ3bl\"><em>Originally published on </em><em><strong><a href=\"http://grist.org/cities/what-happens-to-rios-stadiums-after-the-olympics-end/\">Grist</a></strong></em>.</p>\n<p id=\"lnskZA\">Long after the athletes have packed up their Speedos and the torch has gone out, the structures that house the 2016 Olympics will remain. While Rio de Janeiro used its existing national soccer stadium for the opening and closing ceremonies, it also built a number of other stadiums and venues for the games — and displaced 80,000 residents in the process. So what’s to come of all those buildings once everyone has taken their balls and gone home?</p>\n<p id=\"xSj0uG\">The Rio games were billed as a model for sustainability, but they <a href=\"https://thinkprogress.org/we-were-promised-the-greenest-olympics-ever-we-got-an-ecological-disaster-6fba72f30aad#.4nqhufned\">failed in many respects</a> — from <a href=\"http://grist.org/article/rio-olympics-already-tainted-with-poo/\">polluted waterways</a> to <a href=\"https://www.theguardian.com/sport/2016/aug/02/rio-2016-olympic-games-traffic-jams-vip-lanes-brazil\">nightmarish congestion</a> to <a href=\"http://www.npr.org/sections/parallels/2015/02/08/384287877/will-the-summer-olympics-fix-rios-problems-or-make-them-worse\">the construction of a golf course on a nature preserve</a>. But one of the more important indicators of an event’s sustainability is what happens to the infrastructure after the games are over — and on that front, Rio has ambitious plans.</p>\n<p id=\"leY3g6\">Future Arena, the handball venue, will be taken apart and the pieces used to build four schools around the city, each serving 500 students. Architect Manuel Nogueira said the Future Arena was built with “nomadic architecture,” designed to be easily dismantled, transported, and rebuilt. “The way everything gets moved from place to another is a bit like Lego,” Nogueira told <a href=\"http://www.citylab.com/design/2016/08/rios-plan-to-transform-its-arenas-after-the-olympics-nomadic-architecture-temporary/494963/\">CityLab</a>.</p>\n<p id=\"dYkLMV\">In addition to Future Arena, the city will turn the aquatics stadium into two community swimming centers; the media center will become a high school dorm; and the 300 acres of land on which Barra Olympic Park currently sits will go be turned over for public parks and private development. Repurposing venues like this can be good for both people and the planet: <a href=\"https://www.wired.com/2016/08/games-rios-stadiums-wont-rot-theyll-transform/\">According to architect Jeff Keas</a>, who has worked on seven Olympic games, temporary buildings have half the carbon footprint of conventional buildings, and can cost up to 80 percent less.</p>\n<p id=\"9diwlP\">That’s assuming, of course, that everything goes to plan. Other cities have tried to repurpose Olympic venues without much luck. The iconic Bird’s Nest stadium in Beijing, for instance, was supposed to house China’s leading soccer club after the 2008 games, but the team later backed out amid <a href=\"http://articles.latimes.com/2009/feb/22/world/fg-beijing-bust22\">reports that they were embarrassed</a> to play in an arena built for 91,000 when they averaged 10,000 spectators per game. Now, Bird’s Nest sits empty but for visiting tourists — and still costs <a href=\"https://www.theguardian.com/sport/blog/2015/aug/22/birds-nest-empty-monument-china-magnificence\">$11 million</a> a year to maintain.</p>\n  <figure class=\"e-image\">\n        <img alt=\"Beijing Olympic Games Boosts Chinese Tourism\" src=\"https://cdn3.vox-cdn.com/thumbor/nwG2edxNqqNn68Tzn9K7mhNd57Y=/400x0/filters:no_upscale()/cdn0.vox-cdn.com/uploads/chorus_asset/file/6967585/83435616.jpg\">\n      <cite>Photo by China Photos/Getty Images</cite>\n      <figcaption>The Beijing National Stadium, or the Bird’s Nest, was home of the 2008 Beijing Olympics.</figcaption>\n  </figure>\n<p id=\"hFk5yD\">London, too, has run into trouble with its retired venues. While an aquatic center, a velo dome, and a handball arena leftover from 2012 are all open to the public, there has been controversy over the redevelopment of Queen Elizabeth Olympic Park, home of the Olympic Village and several sporting venues during the games.</p>\n<p id=\"hnqogI\">The park is located in London’s East End, a historically low-income area burdened by <a href=\"https://www.theguardian.com/environment/2010/nov/12/toxic-waste-clean-up-olympic\">tracts of toxic land</a> from centuries of exposure to industrial waste. The city (and taxpayers) cleaned up the land for the Olympics, and the plan was for the park to be redeveloped with an emphasis on affordable housing. Instead, London’s erstwhile mayor and Brexiteer <a href=\"http://www.bbc.com/news/uk-england-london-25749691\">Boris Johnson announced</a> in 2014 that available housing would be reduced in favor of more commercial development. Now that the land was detoxified for the games, the East End is rapidly gentrifying and lower income residents are being pushed out.</p>\n<p id=\"6gPCNz\">Elsewhere, former Olympic venues have simply been left to rot. Hitler’s Olympic Village in Berlin housed a hospital for German soldiers during World War II, but today, <a href=\"http://www.atlasobscura.com/places/hitler-s-olympic-village\">it’s a ruin</a>. The same is true of <a href=\"http://mashable.com/2016/08/10/abandoned-olympic-venues/#MF7WS14FjqqG\">former venues</a> in Turin, Sarajevo, Athens, Munich, and beyond. You can visit these sites — maybe stand on abandoned podiums and run on Olympic tracks — but that’s about all you can do.</p>\n<p id=\"9muIxC\">Perhaps Rio will not meet such a fortune. But even if the city’s arenas are successfully repurposed, the new buildings are not likely to bring solace to the 80,000 residents — most of them poor — who lost their homes to the Olympics. The games may be a two-week-long show for the rest of us, but for the displaced, the disruption they cause could last a lifetime. A new pool to swim in won’t change that.</p>\n<p id=\"uwUtu8\"><em>Grist is a nonprofit news site that uses humor to shine a light on big green issues. Get their email newsletter </em><strong><a href=\"http://grist.org/subscribe/\"><em>here</em></a></strong><em>, and follow them on </em><strong><a href=\"https://www.facebook.com/grist.org\"><em>Facebook</em></a></strong><em> and </em><strong><a href=\"https://twitter.com/grist\"><em>Twitter</em></a></strong><em>.</em></p>\n<hr class=\"p-entry-hr\" id=\"wIZOax\">\n\n<div id=\"GLX4HV\">\n<div data-analytics-viewport=\"video\" data-analytics-action=\"volume:view:article:middle\" data-analytics-label=\"Inside Rio’s favelas|10653\" data-volume-uuid=\"6c740c8ca\" data-volume-id=\"10653\" data-analytics-placement=\"article:middle\" data-volume-placement=\"article\" id=\"volume-placement-256\" class=\"volume-video\"></div>\n\n</div>\n\n">, @id=#<RSS::Atom::Feed::Id:0x00000003a5ebc0 @parent=#<RSS::Atom::Feed::Entry:0x00000003a94130 ...>, @converter=nil, @do_validate=false, @lang=nil, @base=nil, @content="http://www.vox.com/2016/8/21/12562770/rio-olympics-2016-stadiums">, @published=#<RSS::Atom::Feed::Entry::Published:0x00000003a86210 @parent=#<RSS::Atom::Feed::Entry:0x00000003a94130 ...>, @converter=nil, @do_validate=false, @lang=nil, @base=nil, @content=2016-08-21 10:00:03 -0400>, @rights=nil, @source=nil, @summary=nil, @title=#<RSS::Atom::Feed::Title:0x00000003a80630 @parent=#<RSS::Atom::Feed::Entry:0x00000003a94130 ...>, @converter=nil, @do_validate=false, @lang=nil, @base=nil, @type=nil, @xhtml=nil, @content="What will happen to Rio’s stadiums after the Olympics end?">, @updated=#<RSS::Atom::Feed::Updated:0x00000003a82de0 @parent=#<RSS::Atom::Feed::Entry:0x00000003a94130 ...>, @converter=nil, @do_validate=false, @lang=nil, @base=nil, @content=2016-08-21 10:00:03 -0400>, @author=[#<RSS::Atom::Feed::Author:0x00000003a5d4c8 @parent=#<RSS::Atom::Feed::Entry:0x00000003a94130 ...>, @converter=nil, @do_validate=false, @lang=nil, @base=nil, @name=#<RSS::Atom::PersonConstruct::Name:0x00000003a5c118 @parent=#<RSS::Atom::Feed::Author:0x00000003a5d4c8 ...>, @converter=nil, @do_validate=false, @lang=nil, @base=nil, @content="Katie Herzog">, @uri=nil, @email=nil>], @category=[], @contributor=[], @link=[#<RSS::Atom::Feed::Link:0x00000003a5ff98 @parent=#<RSS::Atom::Feed::Entry:0x00000003a94130 ...>, @converter=nil, @do_validate=false, @lang=nil, @base=nil, @href="http://www.vox.com/2016/8/21/12562770/rio-olympics-2016-stadiums", @rel="alternate", @type="text/html", @hreflang=nil, @title=nil, @length=nil>], @dc_title=[], @dc_description=[], @dc_creator=[], @dc_subject=[], @dc_publisher=[], @dc_contributor=[], @dc_type=[], @dc_format=[], @dc_identifier=[], @dc_source=[], @dc_language=[], @dc_relation=[], @dc_coverage=[], @dc_rights=[], @dc_date=[]>]